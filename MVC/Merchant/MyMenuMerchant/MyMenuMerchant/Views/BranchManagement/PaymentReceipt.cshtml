                                                    <p class="mb-0 p-size">จำนวนสินค้า 2 รายการ</p>
                                                </div>*@
                                                <div class="border-menu pb-3 mt-3">
                                                    <div class="layout-flex-space-between">
                                                        <p class="mb-0 p-size w-flex-p-140">@Localizer["จำนวน"] 2<small class="mb-0 p-size w-s-20 f-w-smalll">@Localizer["รวมเงิน"]</small></p>
                                                        <p class="mb-0 p-size">130.00</p>
                                                    </div>
                                                    <div class="layout-flex-space-between">
                                                        <p class="mb-0 p-size w-flex-p-140">@Localizer["ส่วนลด"]<small class="mb-0 p-size w-s-20 f-w-smalll">10%</small></p>
                                                        <p class="mb-0 p-size">13.00</p>
                                                    </div>
                                                    <div class="layout-flex-space-between">
                                                        <p class="mb-0 p-size w-flex-p-140">@Localizer["Service Charge"]<small class="mb-0 p-size w-s-20 f-w-smalll">10%</small></p>
                                                        <p class="mb-0 p-size">11.70</p>
                                                    </div>
                                                    <div class="layout-flex-space-between">
                                                        <p class="mb-0 p-size w-flex-p-140">@Localizer["VAT"]<small class="mb-0 p-size w-s-20 f-w-smalll">7%</small></p>
                                                        <p class="mb-0 p-size">9.01</p>
