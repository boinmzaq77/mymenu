                                                    <p class="mb-0 p-size">Tel. 081-234-5678</p>
                                                </div>

                                                <div class="layout-text-center">
                                                   
                                                    @if (string.IsNullOrEmpty(Model.ReceiptName))
                                                    {
                                                        <p class="mb-0 p-size-head p-weight">@Localizer["ใบเสร็จรับเงิน"]</p>
                                                    }
                                                    else
                                                    {
                                                        <p class="mb-0 p-size-head p-weight">@Model.ReceiptName</p>
                                                    }
                                                    @*<p class="mb-0 p-size-head p-weight">ใบเสร็จรับเงิน/ใบกำกับภาษีอย่างย่อ</p>*@
                                                </div>

                                                <div class="border-sub-detail my-3">
                                                    <div class="">
                                                        <p class="mb-0 p-size">04/09/2566<small class="mb-0 p-size w-s-20 f-w-smalll ml-2">9:52:12</small></p>
                                                        <p class="mb-0 p-size">เลขที่ : 2023000001</p>
                                                        <p class="mb-0 p-size">Cashier : Emp01</p>
                                                        <p class="mb-0 p-size">Table : 15</p>
                                                    </div>
                                                </div>
                                                <div class="border-menu pb-3 mb-3">
                                                    <div class="layout-lists-menu mb-2">
                                                        <div class="w-menu-13">
                                                            <p class="mb-0 p-size">1</p>
                                                        </div>
                                                        <div class="w-menu-max">
                                                            <div class="flex-list-menu">
                                                                <p class="mb-0 p-size">กาแฟเย็น</p>
                                                                <p class="mb-0 p-size">50.00</p>
                                                            </div>
