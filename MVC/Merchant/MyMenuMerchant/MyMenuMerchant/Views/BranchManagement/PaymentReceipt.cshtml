@using MyMenu.ORM.Master;
@model Branch;
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<body id="PaymentReceipt">
    <div class="container">
        <div class="form-row">
            <div class="col-12  mb-2">
                <div class="row ">
                    <div class="col-12 header-group">
                        <a asp-controller="BranchManagement" asp-action="Index"><i class="i-wh fa fa-angle-left color-branch-p"></i></a>
                        <h2 class="font-weight-bold menu-header">@Localizer["ตั้งค่าใบเสร็จรับเงิน"]</h2>
                        <ul class="breadcrumb ">
                            <li class="breadcrumb-item"><a class="color-a-breadcrumb" asp-controller="Dashboard" asp-action="Index"><i class="fa fa-home"></i></a></li>
                            <li class="breadcrumb-item text-ellipsis-link-1"><a class="color-a-breadcrumb" asp-controller="BranchManagement" asp-action="Index">@Localizer["การจัดการสาขา"]</a></li>
                            <li class="breadcrumb-item active text-ellipsis" aria-current="page">@Localizer["ตั้งค่าใบเสร็จรับเงิน"]</li>
                        </ul>

                    </div>
                </div>
            </div>
            <div class="col-12 mb-3 ">
                <div class="card rounded-body border-0">
                    <div class="card-body pt-3">
                        <div class="container-ml">
                            <div class="col-12">
                                <div class="header-card-display">
                                    <p class="text-h2-header">@Localizer["ตัวอย่างใบเสร็จรับเงิน"]</p>
                                  @*<button type="button" class="btn btn-payment-receipt-edit" disabled="disabled"> <img class="img-editw mr-1" src="/mymenumerchant/images/EditW.png" /> แก้ไข</button>*@
                                    @if (ViewBag.role.ToString().ToLower() == "owner" || ViewBag.role.ToString().ToLower() == "admin" || ViewBag.role.ToString().ToLower() == "manager")
                                    {
                                        <a class="btn btn-payment-receipt-edit" asp-controller="BranchManagement" asp-action="PaymentReceiptEdit"> <img class="img-editw mr-1" src="/mymenumerchant/images/EditW.png" /> @Localizer["แก้ไข"]</a>
                                    }
                                </div>
                            </div>
                            <div class="col-12 flex-justify-center my-4">
                                <div class="body-print">
                                    <div class="bg-print">
                                        <div id="html-content-holder" class="container">
                                            <div class="receipt">
                                                <div class="layout-text-center mt-4 mb-3">
                                                    <p class="mb-0 p-size-head p-weight">Happy Coffee</p>
                                                    <p class="mb-0 p-size">บริษัท แฮปปี้ จำกัด</p>
                                                    <p class="mb-0 p-size">สำนักงานใหญ่</p>
