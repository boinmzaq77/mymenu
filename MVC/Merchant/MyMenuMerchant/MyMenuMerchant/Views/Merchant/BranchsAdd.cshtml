<script>
    $(document).ready(function () {
        $("#Save").on("submit", function (e) {
            var dataString = $(this).serialize();

            // alert(dataString); return false;
            $.ajax({
                type: "POST",
                url: "@Url.Action("AddBranch", "Merchant")",
                data: dataString,
                success: function (message) {
                    window.location.href = "@Url.Action("Branchs", "Merchant")";
                }, error: function (message) {
                    console.log(message.responseText);
                    $('#ModalAlert').modal('show');
                    if (message.responseText == "BranchID is Null") {
                        $('#txt1').text("@Localizer["กรุณากรอกรหัสสาขา"]");
                    } else if (message.responseText == "Dublicate BranchID") {
                        $('#txt1').text("@Localizer["รหัสสาขานี้ไม่สามารถใช้งานได้"]");
                        $('#txt2').text("@Localizer["เนื่องจาก ซ้ำกับสาขาอื่น"]");
                    }  else {
                        $('#txt1').text("@Localizer["เพิ่มสาขาไม่สำเร็จ"]");
                        $('#txt2').text("@Localizer["กรุณาลองใหม่อีกครั้ง"]");
                    }
                }
            });
            e.preventDefault();
        });
    });

    const phoneInput = document.getElementById('Tel');
    phoneInput.addEventListener('input', () => {
        var unformattedNumber = phoneInput.value.replace(/-/g, '');

        //เพิ่มเช็คตัวอักษร
        const matchstr = unformattedNumber.match('^[0-9]+$');
        if (!matchstr) {
            console.log(matchstr);
            unformattedNumber = unformattedNumber.slice(0, -1);
        }

        const match = unformattedNumber.match(/^(\d{0,3})(\d{0,3})(\d{0,4})$/);
        if (match) {
            const formattedNumber = [match[1], match[2], match[3]].filter(Boolean).join('-');
            phoneInput.value = formattedNumber;
        }
    });


    function enableButton() {
        var branchName = $('#BranchName').val();
        var btn = $('#btnsave');
        if (jQuery.isEmptyObject(branchName)) {
            btn.prop("disabled", true); //Disable
        } else {
            btn.prop("disabled", false); //Enable
        }
    }


</script>





